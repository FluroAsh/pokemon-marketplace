<section class="index">
    <div class="index__pagination mt-2">
        <%== pagy_bootstrap_nav(@pagy, class: "pagy-nav") %> 
    </div>

    <div class="index__row row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-6">
        <% for card in @cards %> 
            <div class="index__row-card col d-flex justify-content-center">
                <div class="d-flex flex-column">
                    <a href="<%= card_path(card.id) %>">
                        <%= image_tag "#{card.small_image}", id: "#{dom_id(card)}", class: "card-img my-2", alt: "#{card.name} trading card" %>
                    </a>
                    <% if current_user %>
                        <div class="index__row-card-market-menu">
                            <%= link_to "Buy", card_path(card.id), class: "index__row-card-market-menu-buy" %>
                            <%= link_to "Sell", new_listing_path(card.id), class: "index__row-card-market-menu-sell" %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
    
    <div class="index__pagination">
        <%== pagy_bootstrap_nav(@pagy, class: "pagy-nav") %> 
    </div>
</section>